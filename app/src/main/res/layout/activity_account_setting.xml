<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_row_deal"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarColoredBackArrow"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Settings"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_title" />

        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lnlChangePassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:layout_marginTop="@dimen/dm_10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/dm_10dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingLeft="10dp"
                    android:text="Change Password"
                    android:textColor="@color/txt_black_68"
                    android:textSize="@dimen/txt_18sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp">

                    <ImageView
                        android:layout_width="@dimen/dm_20dp"
                        android:layout_height="@dimen/dm_20dp"
                        android:background="@drawable/ic_navigate" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnlFAQ"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:layout_marginTop="@dimen/dm_10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/dm_10dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingLeft="10dp"
                    android:text="FAQs"
                    android:textColor="@color/txt_black_68"
                    android:textSize="@dimen/txt_18sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp">

                    <ImageView
                        android:layout_width="@dimen/dm_20dp"
                        android:layout_height="@dimen/dm_20dp"
                        android:background="@drawable/ic_navigate" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnlTermAndCondition"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:layout_marginTop="@dimen/dm_10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/dm_10dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingLeft="10dp"
                    android:text="Terms and Conditions"
                    android:textColor="@color/txt_black_68"
                    android:textSize="@dimen/txt_18sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp">

                    <ImageView
                        android:layout_width="@dimen/dm_20dp"
                        android:layout_height="@dimen/dm_20dp"
                        android:background="@drawable/ic_navigate" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnlPrivacy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:layout_marginTop="@dimen/dm_10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/dm_10dp"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingLeft="10dp"
                    android:text="Privacy Statement"
                    android:textColor="@color/txt_black_68"
                    android:textSize="@dimen/txt_18sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp">

                    <ImageView
                        android:layout_width="@dimen/dm_20dp"
                        android:layout_height="@dimen/dm_20dp"
                        android:background="@drawable/ic_navigate" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnlLogout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_50dp"
                android:layout_marginBottom="@dimen/dm_10dp"
                android:layout_marginTop="@dimen/dm_20dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/dm_10dp"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txtLogout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:paddingLeft="10dp"
                    android:text="Log Out"
                    android:textColor="@color/red"
                    android:textSize="@dimen/txt_18sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:paddingRight="10dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_logout"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
