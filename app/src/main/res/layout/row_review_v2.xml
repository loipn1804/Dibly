<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/dm_30dp"
            android:layout_height="@dimen/dm_30dp"
            android:layout_marginLeft="@dimen/dm_10dp"
            android:src="@drawable/menu_person" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User 1"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtUserName"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgTime"
                    android:layout_width="@dimen/dm_20dp"
                    android:layout_height="@dimen/dm_20dp"

                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtUser"
                    android:layout_marginLeft="@dimen/dm_10dp"
                    android:text="22:22:22"
                    android:textColor="@color/txt_black_69"
                    android:textSize="@dimen/txt_12sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lnlYayOrNay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUser"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/dm_10dp"
            android:background="@drawable/btn_yay_green"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dm_5dp"
            android:paddingLeft="@dimen/dm_10dp"
            android:paddingRight="@dimen/dm_10dp"
            android:paddingTop="@dimen/dm_5dp">

            <ImageView
                android:id="@+id/imgYayOrNay"
                android:layout_width="@dimen/dm_10dp"
                android:layout_height="@dimen/dm_10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_yay_white" />

            <TextView
                android:id="@+id/txtYayOrNay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtUser"
                android:text="YAY"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtReView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_20dp"
            android:layout_marginRight="@dimen/dm_20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/txt_black_69"
            android:textSize="@dimen/txt_12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtReadmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/dm_10dp"
        android:layout_marginRight="@dimen/dm_10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:visibility="gone"
        android:text="View more >"
        android:textColor="@color/orange_main"
        android:textSize="@dimen/txt_12sp" />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dm_1dp"
      android:layout_marginTop="@dimen/dm_10dp"
      android:background="@color/gray_detail_divider"/>
</LinearLayout>