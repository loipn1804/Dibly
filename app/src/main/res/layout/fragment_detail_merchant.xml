<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_row_deal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_about_merchant" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dm_5dp"
                android:paddingLeft="@dimen/dm_10dp"
                android:paddingRight="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_avatar_orange"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/imvMerchantPicture"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dm_10dp"
                    android:layout_marginRight="@dimen/dm_10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtMerchantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/orange_main"
                        android:textSize="@dimen/txt_15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dm_30dp"
                        android:layout_marginTop="@dimen/dm_10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imvFacebook"
                            android:layout_width="@dimen/dm_30dp"
                            android:layout_height="@dimen/dm_30dp"
                            android:src="@drawable/ic_facebook" />

                        <ImageView
                            android:id="@+id/imvTwitter"
                            android:layout_width="@dimen/dm_30dp"
                            android:layout_height="@dimen/dm_30dp"
                            android:layout_marginLeft="@dimen/dm_10dp"
                            android:src="@drawable/ic_twitter" />

                        <ImageView
                            android:id="@+id/imvInstagram"
                            android:layout_width="@dimen/dm_30dp"
                            android:layout_height="@dimen/dm_30dp"
                            android:layout_marginLeft="@dimen/dm_10dp"
                            android:src="@drawable/ic_instagram" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtFollowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_claim_now"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:text="Follow"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/txt_12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtViewMoreImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dm_10dp"
                android:paddingRight="@dimen/dm_10dp"
                android:text=""
                android:textColor="@color/txt_black_69"
                android:textSize="@dimen/txt_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dm_10dp"
                android:paddingRight="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_20dp"
                android:text="Profile"
                android:textColor="@color/txt_black_69"
                android:textSize="@dimen/txt_18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/dm_10dp">

                <LinearLayout
                    android:id="@+id/btnViewMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_call_phone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="3dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_map_call" />

                    <TextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/txt_black_69"
                        android:textSize="@dimen/txt_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnCallMerchant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm_10dp"
                    android:background="@drawable/btn_call_phone"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="3dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_map_call" />

                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/txt_black_69"
                        android:textSize="@dimen/txt_12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:padding="@dimen/dm_10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dm_10dp"
                android:paddingRight="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_20dp"
                android:text="Outlet"
                android:textColor="@color/txt_black_69"
                android:textSize="@dimen/txt_18sp" />

            <LinearLayout
                android:id="@+id/lnlViewAllOutlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm_10dp"
                android:layout_marginTop="@dimen/dm_10dp"
                android:background="@drawable/btn_call_phone"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dm_40dp"
                    android:layout_height="@dimen/dm_40dp"
                    android:src="@drawable/ic_view_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_10dp"
                    android:text="View all outlets"
                    android:textColor="@color/txt_black_69"
                    android:textSize="@dimen/txt_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/lnlFollowing"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_call_phone"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="@dimen/dm_50dp"
                        android:layout_height="@dimen/dm_50dp"
                        android:src="@drawable/menu_follow_sm" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm_10dp"
                        android:gravity="center_horizontal"
                        android:text="Follow Merchant"
                        android:textColor="@color/txt_black_69"
                        android:textSize="@dimen/txt_15sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dm_10dp"
                android:paddingRight="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_20dp"
                android:text="Reviews"
                android:textColor="@color/txt_black_69"
                android:textSize="@dimen/txt_18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dm_10dp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dm_5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imvLike"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_like_al" />

                    <LinearLayout
                        android:id="@+id/lnlLike"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtLike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dm_5dp"
                                android:layout_marginTop="@dimen/dm_5dp"
                                android:text="YAY! "
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_22sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtYourLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_12sp" />

                    <ProgressBar
                        android:id="@+id/progLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dm_5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imvUnLike"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_unlike_al" />

                    <LinearLayout
                        android:id="@+id/lnlUnLike"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtUnLike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dm_5dp"
                                android:layout_marginTop="@dimen/dm_5dp"
                                android:text="NAY!"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_22sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtYourUnLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_12sp" />

                    <ProgressBar
                        android:id="@+id/progUnLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnlReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dm_5dp"
                android:paddingRight="@dimen/dm_5dp">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnlViewAllReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dm_10dp"
                android:layout_marginTop="@dimen/dm_10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dm_40dp"
                    android:layout_height="@dimen/dm_40dp"
                    android:src="@drawable/ic_view_all_review" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all reviews"
                    android:textColor="@color/txt_black_69"
                    android:textSize="@dimen/txt_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_1dp"
                android:layout_marginLeft="@dimen/dm_10dp"
                android:layout_marginRight="@dimen/dm_10dp"
                android:background="@color/gray_detail_divider">

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dm_10dp"
                android:paddingRight="@dimen/dm_10dp"
                android:paddingTop="@dimen/dm_20dp"
                android:text="More deals from this merchant"
                android:textColor="@color/txt_black_69"
                android:textSize="@dimen/txt_18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dm_10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/dm_10dp">

                    <TextView
                        android:id="@+id/txtNewDeal"
                        android:layout_width="@dimen/ac_imv_size"
                        android:layout_height="@dimen/ac_imv_size"
                        android:background="@drawable/bg_avatar_orange"
                        android:gravity="center"
                        android:padding="@dimen/dm_5dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_15sp" />

                    <TextView
                        android:id="@+id/txtLabelNewDeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dm_5dp"
                        android:textColor="@color/txt_black_69"
                        android:textSize="@dimen/txt_15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dm_10dp">

                    <TextView
                        android:id="@+id/txtPastDeal"
                        android:layout_width="@dimen/ac_imv_size"
                        android:layout_height="@dimen/ac_imv_size"
                        android:background="@drawable/bg_avatar_orange"
                        android:gravity="center"
                        android:padding="@dimen/dm_5dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_15sp" />

                    <TextView
                        android:id="@+id/txtLabelPastDeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dm_5dp"
                        android:textColor="@color/txt_black_69"
                        android:textSize="@dimen/txt_15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>