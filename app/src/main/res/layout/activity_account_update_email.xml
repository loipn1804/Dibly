<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3000000"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm_20dp"
        android:background="@color/gray_bg_row_deal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dm_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Dibly"
            android:textColor="@color/orange_main"
            android:textSize="@dimen/txt_18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm_20dp"
            android:gravity="center_horizontal"
            android:text="Please share with us your email so that we can share our deals and upcoming events with you!"
            android:textColor="@color/txt_black_68"
            android:textSize="@dimen/txt_18sp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_40dp"
            android:layout_marginTop="@dimen/dm_20dp"
            android:background="@drawable/bg_edittext_account"
            android:hint="Email"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/txt_black_68"
            android:textColorHint="@color/txt_hint"
            android:textSize="@dimen/txt_18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_50dp"
            android:layout_marginTop="@dimen/dm_20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/lnlCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dm_5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_cancel_sm"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnlOk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm_5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ok_sm"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ok"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>