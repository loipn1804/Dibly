<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/orange_main"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_menu"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_profile_menu"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rltAvatar"
                        android:layout_width="@dimen/height_avatar"
                        android:layout_height="@dimen/height_avatar"
                        android:background="@drawable/bg_avatar_white"
                        android:padding="3dp">

                        <ImageView
                            android:id="@+id/imvAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/menu_person" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm_5dp">

                        <LinearLayout
                            android:id="@+id/lnlNotSignupYet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <RelativeLayout
                                android:id="@+id/btnSignupToday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:background="@drawable/btn_sign_up_menu_presses"
                                android:paddingBottom="10dp"
                                android:paddingLeft="30dp"
                                android:paddingRight="30dp"
                                android:paddingTop="10dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="Sign up today"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/txt_18sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnlSignupAlready"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal|top"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/txtWelcomeBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="loi"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_26sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dm_20dp">


                <LinearLayout
                    android:id="@+id/lnlDeal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_50dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_menu_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/dm_20dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:layout_width="@dimen/dm_20dp"
                        android:layout_height="@dimen/dm_20dp"
                        android:src="@drawable/ic_deal_menu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm_10dp"
                        android:textColor="@color/white"
                        android:text="Deals Around You"
                        android:textSize="@dimen/txt_18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnlDiscovery"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_50dp"
                    android:paddingLeft="@dimen/dm_20dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:background="@drawable/btn_menu_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/dm_20dp"
                        android:layout_height="@dimen/dm_20dp"
                        android:src="@drawable/ic_dicover_menu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Discovery"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_18sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnlPurchaseDeal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_50dp"
                    android:paddingLeft="@dimen/dm_20dp"

                    android:layout_weight="1"
                    android:background="@drawable/btn_menu_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/dm_20dp"
                        android:layout_height="@dimen/dm_20dp"
                        android:src="@drawable/ic_purchase_menu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:text="My Deals"
                        android:textSize="@dimen/txt_18sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnlFollowing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_50dp"
                    android:paddingLeft="@dimen/dm_20dp"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:background="@drawable/btn_menu_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/dm_20dp"
                        android:layout_height="@dimen/dm_20dp"
                        android:src="@drawable/ic_heart_white"
                        android:tint="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Following"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_18sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnlMyProfile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_50dp"
                    android:paddingLeft="@dimen/dm_20dp"
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:background="@drawable/btn_menu_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/dm_20dp"
                        android:layout_height="@dimen/dm_20dp"
                        android:src="@drawable/ic_profile_white"
                        android:tint="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="My Profile"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnlSetting"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_50dp"
                    android:paddingLeft="@dimen/dm_20dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:background="@drawable/btn_menu_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/dm_20dp"
                        android:layout_height="@dimen/dm_20dp"
                        android:src="@drawable/ic_setting"
                        android:tint="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Setting"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_18sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnlMerchantList"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_50dp"
                    android:paddingLeft="@dimen/dm_20dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:background="@drawable/btn_menu_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">


                    <ImageView
                        android:layout_width="@dimen/dm_20dp"
                        android:layout_height="@dimen/dm_20dp"
                        android:src="@drawable/ic_merchant_menu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:text="Merchants"
                        android:textSize="@dimen/txt_18sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnlSignOut"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_50dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/dm_20dp"
                    android:layout_marginLeft="@dimen/dm_20dp"
                    android:layout_marginRight="@dimen/dm_20dp"
                    android:background="@drawable/btn_menu_item_signout"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:text="Sign Out"
                        android:textSize="@dimen/txt_18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/lnlInviteFriend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_call_phone"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:visibility="visible">


                        <ImageView
                            android:layout_width="@dimen/size_ic_menu"
                            android:layout_height="@dimen/size_ic_menu"
                            android:src="@drawable/menu_invite_friend_2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Invite Friend"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>