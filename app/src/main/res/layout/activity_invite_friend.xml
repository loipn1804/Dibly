<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_row_deal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rltActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rltBack"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="match_parent"
            android:background="@drawable/btn_white"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imvBack"
                android:layout_width="@dimen/ac_imv_size"
                android:layout_height="@dimen/ac_imv_size"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtNameActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Invite Friend"
            android:textColor="@color/orange_main"
            android:textSize="@dimen/txt_title" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_10dp"
        android:text="Invite a Friend"
        android:textColor="@color/txt_black_69"
        android:textSize="@dimen/txt_22sp" />

    <TextView
        android:id="@+id/txtSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm_10dp"
        android:text="www.getdibly.com"
        android:textColor="@color/txt_black_69"
        android:textSize="@dimen/txt_15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_10dp"
            android:text="Here is your invite code:"
            android:textColor="@color/txt_black_69"
            android:textSize="@dimen/txt_15sp" />

        <TextView
            android:id="@+id/txtInviteCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm_10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/txt_black_69"
            android:textSize="@dimen/txt_15sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10dp"
        android:layout_marginTop="@dimen/dm_10dp"
        android:text="Invite friend via:"
        android:textColor="@color/txt_black_69"
        android:textSize="@dimen/txt_15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dm_30dp"
        android:layout_marginLeft="@dimen/dm_10dp"
        android:layout_marginTop="@dimen/dm_10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvFacebook"
            android:layout_width="@dimen/dm_30dp"
            android:layout_height="@dimen/dm_30dp"
            android:src="@drawable/ic_facebook" />

        <ImageView
            android:id="@+id/imvTwitter"
            android:layout_width="@dimen/dm_30dp"
            android:layout_height="@dimen/dm_30dp"
            android:layout_marginLeft="@dimen/dm_10dp"
            android:src="@drawable/ic_twitter" />

        <ImageView
            android:id="@+id/imvInstagram"
            android:layout_width="@dimen/dm_30dp"
            android:layout_height="@dimen/dm_30dp"
            android:layout_marginLeft="@dimen/dm_10dp"
            android:src="@drawable/ic_instagram" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1dp"
        android:layout_marginLeft="@dimen/dm_10dp"
        android:layout_marginRight="@dimen/dm_10dp"
        android:layout_marginTop="@dimen/dm_10dp"
        android:background="@color/gray_detail_divider"></View>

    <TextView
        android:id="@+id/txtNumDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10dp"
        android:layout_marginTop="@dimen/dm_10dp"
        android:text="You have 0 discount tokens available for use."
        android:textColor="@color/txt_black_69"
        android:textSize="@dimen/txt_15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10dp"
        android:layout_marginTop="@dimen/dm_10dp"
        android:text="You may only use your invite tokens on your next long-term deal purchase."
        android:textColor="@color/txt_black_69"
        android:textSize="@dimen/txt_15sp" />

    <ListView
        android:id="@+id/lvData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

    </ListView>
</LinearLayout>