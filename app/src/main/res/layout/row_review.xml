<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/rltAvatar"
        android:layout_width="@dimen/dm_40dp"
        android:layout_height="@dimen/dm_40dp"
        android:layout_marginBottom="@dimen/dm_10dp"
        android:layout_marginTop="@dimen/dm_10dp">

        <TextView
            android:id="@+id/txtAvatarName"
            android:layout_width="@dimen/dm_40dp"
            android:layout_height="@dimen/dm_40dp"
            android:background="@drawable/bg_circle_avatar_default"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_26sp" />

        <ImageView
            android:id="@+id/imvAvatar"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="@dimen/actionbar_height"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm_10dp"
        android:layout_marginLeft="@dimen/dm_10dp"
        android:layout_marginTop="@dimen/dm_10dp"
        android:layout_toRightOf="@id/rltAvatar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/blue_main"
                android:textSize="@dimen/txt_15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/txt_black_68"
                android:textSize="@dimen/txt_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtDealTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/txt_black_68"
            android:textSize="@dimen/txt_12sp" />

        <TextView
            android:id="@+id/txtReView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/txt_black_68"
            android:textSize="@dimen/txt_12sp" />

        <TextView
            android:id="@+id/txtReadmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="@dimen/dm_2dp"
            android:text="Read more"
            android:textColor="@color/blue_main"
            android:textSize="@dimen/txt_12sp" />
    </LinearLayout>
</RelativeLayout>