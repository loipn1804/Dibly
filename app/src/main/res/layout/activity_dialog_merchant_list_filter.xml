<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3000000"
    android:orientation="vertical"
    android:padding="@dimen/dm_20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dm_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Industry Type:"
            android:textColor="@color/txt_black_69"
            android:textSize="@dimen/txt_18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dm_10dp"
            android:paddingRight="@dimen/dm_10dp">

            <CheckBox
                android:id="@+id/chkbAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm_10dp" />

            <TextView
                android:id="@+id/txtSelectAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select All"
                android:textColor="@color/txt_black_69"
                android:textSize="@dimen/txt_15sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lvIndustryType"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dm_10dp"
            android:layout_weight="1"
            android:divider="@color/gray_detail_divider"
            android:dividerHeight="1px">

        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm_10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/dm_5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_cancel"
                android:gravity="center"
                android:text="CANCEL"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt_18sp" />

            <Button
                android:id="@+id/btnOk"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/dm_5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_make_payment"
                android:gravity="center"
                android:text="OK"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt_18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>