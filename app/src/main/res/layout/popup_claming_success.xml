<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dm_20dp"
    android:minWidth="2000dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_cornerpopup"
        android:minWidth="2000dp"
        android:orientation="vertical"
        android:padding="@dimen/dm_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dm_20dp"
                android:text="Congrats on claiming"
                android:textColor="@color/txt_black_68"
                android:textSize="@dimen/txt_18sp" />

            <TextView
                android:id="@+id/txtMerchantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dm_5dp"
                android:text="Merchant Name"
                android:textColor="@color/orange_main"
                android:textSize="@dimen/txt_15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dm_15dp"
                android:text="How was your claming deal experience?"
                android:textColor="@color/txt_black_69"
                android:textSize="@dimen/txt_12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm_10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_40dp"
                android:layout_marginBottom="@dimen/dm_20dp"
                android:layout_marginRight="@dimen/dm_5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_yay_green"
                android:gravity="center"
                android:id="@+id/btnYay"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgYay"
                    android:layout_width="@dimen/dm_30dp"
                    android:layout_height="@dimen/dm_30dp"
                    android:adjustViewBounds="true"
                    android:tint="@color/silver"
                    android:src="@drawable/ic_yay_white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YAY"
                    android:layout_marginLeft="@dimen/dm_5dp"
                    android:id="@+id/txtYay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_40dp"
                android:layout_marginLeft="@dimen/dm_5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_nay_red"
                android:gravity="center"
                android:id="@+id/btnNay"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgNay"
                    android:layout_width="@dimen/dm_30dp"
                    android:layout_height="@dimen/dm_30dp"
                    android:adjustViewBounds="true"
                    android:tint="@color/silver"
                    android:src="@drawable/ic_nya_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NAY"
                    android:id="@+id/txtNay"
                    android:layout_marginLeft="@dimen/dm_5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_15sp" />
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/edtComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext_review"
            android:gravity="top"
            android:hint="Your comment ...(optional)"
            android:lines="4"
            android:padding="@dimen/dm_10dp"
            android:textColor="@color/txt_black_69"
            android:textColorHint="@color/txt_hint"
            android:textCursorDrawable="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_40dp"
            android:layout_marginTop="@dimen/dm_10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lnlSubmit"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="@drawable/btn_ok_organge"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_22sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>