<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/dm_20dp" />
            <stroke android:color="#80ff0000" android:width="@dimen/dm_1dp"/>
            <solid android:color="#80ff0000" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/dm_20dp" />
            <stroke android:color="@color/red" android:width="@dimen/dm_1dp"/>
            <solid android:color="@color/red" />
        </shape>
    </item>
</selector>