<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="#1adddddd" />
            <size
                android:width="@dimen/ac_imv_size"
                android:height="@dimen/ac_imv_size" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size
                android:width="@dimen/ac_imv_size"
                android:height="@dimen/ac_imv_size" />
        </shape>
    </item>

</layer-list>